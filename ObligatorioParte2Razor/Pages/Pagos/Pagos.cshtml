@page
@model ObligatorioParte2Razor.Pages.Admin.PagosModel
@using Microsoft.AspNetCore.Mvc.Rendering
@using ObligatorioParte2Razor.Dominio
@{
    ViewData["Title"] = "Registrar Pago";
    Layout = "_AdminLayout";
}

<h2>Registrar Pago</h2>

@if (TempData["Exito"] != null)
{
    <div style="color:green">@TempData["Exito"]</div>
}

<form method="post">
    <div>
        <label>Consulta:</label>
        <select asp-for="SelectedConsultaId"
                asp-items="@(new SelectList(Model.Consultas.Select(c => new { c.ID, Texto = $"Consulta {c.ID} - Paciente {c.IdPaciente} - {c.FechaHora:dd/MM/yyyy HH:mm}" }), "ID", "Texto"))">
            <option value="">--Seleccione una consulta--</option>
        </select>
    </div>

    <div>
        <label>Monto:</label>
        <input asp-for="Monto" type="number" step="0.01" />
    </div>

    <div>
        <label>Método:</label>
        <select asp-for="Metodo" asp-items="Html.GetEnumSelectList<MetodoPago>()"></select>
    </div>

    <button type="submit">Registrar Pago</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div style="color:red">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
